<% if @view_in_config && @js_erb_code %>
  <% @js_erb_code = ERB.new(@js_erb_code)%>
  <%= render @js_erb_code %>
  
<% else %>
  <% if params[:item][:field_changed] == 'item_name' && @part_name %>
    <% part = PettyWarehousex.material_item_class.find_by_name(@part_name) %>
    <% if part.present? %>
      <% if part.has_attribute?(:spec)%>
        $('#item_item_spec').val("<%=part.spec %>");
      <% elsif part.has_attributes?(:item_spec)%>
        $('#item_item_spec').val("<%=part.item_spec %>");
      <% end %>
      $('#item_unit').val("<%=part.unit %>");
    <% else %>
      $('#item_item_spec').val("");
      $('#item_unit').val("");
    <% end %>
    $('#item_field_changed').val('');
  <% end %>
<% end %>
