<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @item do |f| %>    

  <%= f.input :name, :label => t("Item Name"), :input_html => { data: {autocomplete_source: SUBURI + base_materialx.autocomplete_parts_path}},:placeholder => t("Enter Part Name Keyword"), :required => true  %>
  <%= f.input :field_changed, :as => :hidden %> 
  <%= f.input :whs_string, :as => :hidden, :input_html => {:value => @whs_string}%>
  <%= f.input :item_spec, :label => t("Spec"), :readonly => true %>
  <%= f.input :in_date, :label => t("In Date"), :as => :string %> 
  <%= f.input :in_qty, :label => t("In Qty") %>
  <%= f.input :unit, :label => t("Unit"), :collection => @qty_unit, :include_blank => true %>  
  <%= f.input :unit_price, :label => t("Unit Price($)") %> 
  <%= f.input :other_cost, :label => t("Other Cost($)") %>
  <%= f.input :total_cost, :label => t("Total Cost($)") %>
  <%= f.input :storage_location, :label => t("Storage Location") %> 
  <%= f.input :inspection, :label => t("Inspection"), :input_html => {:rows => 4} %> 
  <%= f.input :supplier_id, :label => t('Supplier'), :collection => PettyWarehousex.supplier_class.where(:active => true), :include_blank => true %>
  <%= f.input :project_id, :label => t('Project#') %>
  <%= f.input :purchase_order_id, :label => t('PO#') %>
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>

<% end %>
